<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="fanshawe.heyfamily.VisitProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_userImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/profile_visit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_userImage"
        android:layout_marginTop="15dp"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_visit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_visit_username"
        android:layout_marginTop="10dp"
        android:text="User Status"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_visit_sendReq_btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/button_border"
        android:text="Send Friend Request"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/profile_visit_decline_btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_visit_sendReq_btn"
        android:layout_alignStart="@+id/profile_visit_sendReq_btn"
        android:layout_below="@+id/profile_visit_sendReq_btn"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_border"
        android:text="Decline Friend Request"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
