<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash"
    tools:context="fanshawe.heyfamily.StartPageActivity">

    <Button
        android:id="@+id/signup_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signin_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_border2"
        android:text="Sign up"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signup_button"
        android:layout_gravity="center"
        android:layout_marginBottom="61dp"
        android:background="@drawable/button_border"
        android:text="login"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />

</RelativeLayout>
