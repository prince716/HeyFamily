<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fanshawe.heyfamily.ForgotPasswordActivity">

    <include
        android:id="@+id/forgot_app_bar"
        layout="@layout/app_bar_layout">

    </include>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Please enter your registered HeyFamily account email address."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/forgot_email_input"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="Enter your email address.."
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/reset_password_btn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_email_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark"
        android:text="Reset Password"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
