<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messagges_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/messagges_profile_image"

        android:layout_marginBottom="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/messagges_profile_image"
        android:layout_toRightOf="@+id/messagges_profile_image"
        android:background="@drawable/message_text_bg"
        android:padding="12dp"
        android:text="TextView"
        android:textColor="@android:color/background_light" />

</RelativeLayout>